{
    "name": "exilestudios/eolib-php",
    "description": "A PHP library for protocol code generation and other functionalities.",
    "type": "library",
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "ProtocolCodeGenerator\\": "ProtocolCodeGenerator/",
            "Eolib\\": "Eolib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eolib\\Tests\\": "Tests/Eolib/"
        }
    },
    "authors": [
        {
            "name": "Stephen Michael",
            "email": "officialexile@live.com"
        }
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "scripts": {
        "generate-protocol": [
            "php Protocol.php generate"
        ],
        "generate-docs": [
            "php phpDocumentor.phar run -d ./Eolib/ -t docs/"
        ],
        "build": [
            "@generate-protocol",
            "@generate-docs"
        ],
        "post-install-cmd": [
            "@dump-autoload"
        ],
        "post-update-cmd": [
            "@dump-autoload"
        ],
        "dump-autoload": [
            "composer dump-autoload"
        ],
        "run-tests": [
            "vendor/bin/phpunit --testdox"
        ],
        "test": [
            "@generate-protocol",
            "@run-tests"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "10"
    }
}
